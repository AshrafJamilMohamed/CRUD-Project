@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div asp-validation-summary="All" class="test-danger">
</div>
<h1>Creative SignUp Form</h1>
<div class="main-agileinfo">
    <div class="agileits-top">

        <form asp-action="Register">

            <input class="text" asp-for="FName" placeholder="Enter First Name" required="">
            <span asp-validation-for="FName" class="text-danger"></span>
             <br />
            <input class="text" asp-for="LName" placeholder="Enter Last Name" required="">
            <span asp-validation-for="LName" class="text-danger"></span>
            <br />
            <input class="text email" asp-for="Email" placeholder="Enter Your Email" required="">
            <span asp-validation-for="Email" class="text-danger"></span>
            <br />
            <input class="text" asp-for="Password" placeholder="Password" required="">
            <span asp-validation-for="Password" class="text-danger"></span>
            <br />
            <input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <br />
            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="IsAgree" class="checkbox" required="">
                    <span>I Agree To The Terms & Conditions</span>
                    <span asp-validation-for="IsAgree" class="text-danger"></span>

                </label>
                <div class="clear"> </div>
            </div>
           
            <input type="submit" value="SIGNUP">
        </form>
        <p>Do You have an Account? <a asp-action="Login"> Login Now!</a></p>
    </div>
</div>

@section ValidationScriptsPartial
{
    <partial name="_ValidationScriptsPartial" />
}

