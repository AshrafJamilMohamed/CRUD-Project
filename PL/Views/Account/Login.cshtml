@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div asp-validation-summary="All" class="test-danger">
</div>
<div class="main-agileinfo">
    <div class="agileits-top">

        <form asp-action="Login">
       
            <input class="text email" asp-for="Email" placeholder="Enter Your Email" required="">
            <span asp-validation-for="Email" class="text-danger"></span>
            <br />
            <input class="text" asp-for="Password" placeholder="Password" required="">
            <span asp-validation-for="Password" class="text-danger"></span>
            <br />
     
            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="RememberMe" class="checkbox" required="">
                    <span>RememberMe</span>
                    <span asp-validation-for="RememberMe" class="text-danger"></span>

                </label>
                <div class="clear"> </div>
            </div>

            <input type="submit" value="SIGNIP">
        </form>
        <p>Don't have an Account? <a asp-action="Register"> SignUp Now!</a></p>
    </div>
</div>

@section ValidationScriptsPartial
    {
    <partial name="_ValidationScriptsPartial" />
}
