@model EmployeeViewModel
@{
    var departments = new SelectList(@ViewBag.departments, "Id", "Name");
}

<div class="form-group">
    <label asp-for="Name" class="col-form-label"></label>
    <input asp-for="Name" class="form-control" />  @*asp-for instead of using type and name properties *@
    <span asp-validation-for="Name" class="text-danger"></span>

</div>
<div class="form-group">
    <label asp-for="Age" class="col-form-label"></label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>


</div>

<div class="form-group">
    <label asp-for="Image" class="col-form-label"></label>
    <input asp-for="Image" class="form-control" />
 

</div>

